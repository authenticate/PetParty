<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ../FrameXML/UI.xsd">
    
    <Script File="PetParty_MainFrame.lua"/>
    
    <Frame name="PetParty_MainFrame" parent="UIParent" hidden="true" enableMouse="true" frameStrata="DIALOG" movable="true" resizable="true">
        <Size x="384" y="512"/>
        <Anchors>
            <Anchor point="CENTER" relativePoint="CENTER" relativeTo="UIParent"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"
                  edgeFile="Interface\DialogFrame\UI-DialogBox-Border"
                  tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
        </Backdrop>
        <Layers>
            <Layer level="ARTWORK">
                <Texture name="$parent_Title" file="Interface\DialogFrame\UI-DialogBox-Header">
                    <Size>
                        <AbsDimension x="256" y="64"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="10"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <FontString name="$parent_Title_Font_String" inherits="GameFontNormal">
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset x="0" y="-4"/>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parent_Button_Close" inherits="OptionsButtonTemplate" hidden="false">
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset x="-12" y="-12"/>
                    </Anchor> 
                </Anchors>
                <Size>
                    <AbsDimension x="21" y="21"/>
                </Size>
                <Scripts>
                    <OnClick>
                        self:GetParent():Hide();
                    </OnClick>
                </Scripts>
                <NormalTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Up"/>
                <PushedTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Highlight" alphaMode="ADD"/>
            </Button>
            <Button name="$parent_Button_Create_Pet_Party" inherits="OptionsButtonTemplate" hidden="false">
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset x="12" y="-12"/>
                    </Anchor> 
                </Anchors>
                <Scripts>
                    <OnClick>
                        PetParty.OnClickMainFrameButtonCreatePetParty();
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="$parent_Button_Delete_Pet_Party" inherits="OptionsButtonTemplate" hidden="false">
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset x="112" y="-12"/>
                    </Anchor> 
                </Anchors>
                <Scripts>
                    <OnClick>
                        PetParty.OnClickMainFrameButtonDeletePetParty();
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="$parent_Button_Resize" inherits="OptionsButtonTemplate" hidden="false">
                <Anchors>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset x="-12" y="12"/>
                    </Anchor> 
                </Anchors>
                <Size>
                    <AbsDimension x="21" y="21"/>
                </Size>
                <Scripts>
                    <OnDragStart>
                        PetParty.OnDragStartMainFrameButtonResize();
                    </OnDragStart>
                    <OnDragStop>
                        PetParty.OnDragStopMainFrameButtonResize();
                    </OnDragStop>
                </Scripts>
                <NormalTexture file="Interface\Buttons\UI-Panel-SmallerButton-Up">
                    <TexCoords left="1" right="0" top="0" bottom="1"/>
                </NormalTexture>
            </Button>
        </Frames>
        <Scripts>
            <OnDragStart>
                PetParty.OnDragStartMainFrame();
            </OnDragStart>
            <OnDragStop>
                PetParty.OnDragStopMainFrame();
            </OnDragStop>
            <OnEvent>
                PetParty.OnEventMainFrame(event);
            </OnEvent>
            <OnLoad>
                PetParty.OnLoadMainFrame();
            </OnLoad>
            <OnShow>
                PetParty.OnShowMainFrame();
            </OnShow>
            <OnUpdate>
                PetParty.OnUpdateMainFrame();
            </OnUpdate>
        </Scripts>
    </Frame>
    
</Ui>
